@page "/login"
@layout NoMainLayout
<div class="main-content minh-100 justify-content-center">
    <div class="p-2 p-md-4">
        <div class="row justify-content-center">
            <div class="shadow radius-1 overflow-hidden bg-white col-12 col-lg-5">
                <div class="row">
                    <div class="col-12 py-lg-5 bgc-white px-0">
                        <ul class="d-none mt-n4 mb-4 nav nav-tabs nav-tabs-simple justify-content-end" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#id-tab-login" role="tab" aria-controls="login" aria-selected="true">
                                    Giriş
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content tab-sliding border-0 p-0" data-swipe="right">
                            <div class="tab-pane show mh-100 px-3 px-lg-0 pb-3 active" id="id-tab-login">
                                <div class="text-secondary-m1 my-4 text-center">
                                    <i class="fa fa-leaf text-success-m2 text-200 mb-4"></i>
                                    <h1 class="text-170">
                                        <span class="text-blue-d1">
                                            Form Sistemi
                                            <span class="text-80 text-dark-tp3">
                                                Girişi
                                            </span>
                                        </span>
                                    </h1>
                                    Hoşgeldiniz
                                </div>
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-8 offset-md-2">
                                        <div class="d-flex align-items-center input-floating-label text-blue-m1 brc-blue-m2">
                                            <input type="text" id="txtLoginUsername" class="form-control form-control-lg pr-4 shadow-none" />
                                            <i class="fa fa-user text-grey-m2 ml-n4"></i>
                                            <label class="floating-label text-grey-l1 text-100 ml-n3" for="txtLoginUsername">
                                                Kullanıcı Adı
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group mt-2 mt-md-1 col-md-8 offset-md-2">
                                        <div class="d-flex align-items-center input-floating-label text-blue-m1 brc-blue-m2">
                                            <input type="password" id="txtLoginPassword" class="form-control form-control-lg pr-4 shadow-none" />
                                            <i class="fa fa-key text-grey-m2 ml-n4"></i>
                                            <label class="floating-label text-grey-l1 text-100 ml-n3" for="txtLoginPassword">Şifre</label>
                                        </div>
                                    </div>
                                    <div class="text-right text-md-right mt-n2 mb-2 col-md-8 offset-md-2">
                                        <a href="#" class="text-primary-m2 text-95" data-toggle="tab" data-target="#id-tab-forgot">
                                            Parolanızı mı unuttunuz?
                                        </a>
                                    </div>
                                    <div class="form-group col-md-8 offset-md-2">
                                        <label class="d-inline-block mt-3 mb-0 text-secondary">
                                            <input type="checkbox" class="mr-1" id="id-remember-me" />
                                            Beni Hatırla
                                        </label>
                                        <button type="button" class="btn btn-info btn-block btn-md btn-bold mt-2 mb-4">
                                            Giriş Yap
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane mh-100 px-3 px-lg-0 pb-3" id="id-tab-forgot" data-swipe-prev="#id-tab-login">
                                <div class="position-tl ml-3 mt-2">
                                    <a href="#" class="btn btn-light-default bg-transparent active" data-toggle="tab" data-target="#id-tab-login">
                                        <i class="fa fa-arrow-left"></i>
                                    </a>
                                </div>
                                <div class="form-row mt-4">
                                    <div class="form-group col-md-8 offset-md-2">
                                        <label class="text-secondary-m1 mb-3">
                                            E-posta adresinizi girin ve size talimatları gönderelim:
                                        </label>
                                        <div class="d-flex align-items-center">
                                            <input type="email" class="form-control form-control-lg pr-4 shadow-none" id="id-recover-email" placeholder="Email" autocomplete="off" />
                                            <i class="fa fa-envelope text-grey-m2 ml-n4"></i>
                                        </div>
                                    </div>
                                    <div class="form-group mt-1 col-md-8 offset-md-2">
                                        <button type="button" class="btn btn-warning btn-block mt-2 mb-4">
                                            Devam et
                                        </button>
                                    </div>
                                </div>
                                <div class="form-row w-100">
                                    <div class="col-12 d-flex flex-column align-items-center justify-content-center col-md-8 offset-md-2 ">
                                        <hr class="brc-default-m4 mt-0 mb-2 w-100" />
                                        <div class="p-0 px-md-2 text-dark-tp4 my-3">
                                            <a class="text-blue-m2 text-600" data-target="#id-tab-login" data-toggle="tab" href="#">
                                                Giriş Ekranına Dön
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.col-->

        </div>
        <!--/.row-->
    </div>
    <!--/.-->
</div>
<!--/.main-concent-->

